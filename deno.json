{
	"version": "0.0.0",
	"tasks": {
		"fixtures": "deno run -RW scripts/fixtures.ts"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-var",
				"prefer-const",
				"no-cond-assign",
				"no-extra-boolean-cast",
				"no-inner-declarations"
			]
		}
	},
	"fmt": {
		"lineWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"exclude": [
		"coverage",
		"readme.md",
		"npm"
	]
}
